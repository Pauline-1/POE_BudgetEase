<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp"/>

        <!-- Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:alpha="0.95"
            android:src="@drawable/logo" />

        <!-- Welcome Message -->

        <!-- Buttons Container (to be shuffled programmatically) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="sans-serif-medium"
            android:text="Welcome ðŸ˜Š To Our Dashboard"
            android:textColor="@color/textColorPrimary"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/buttonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btnSetGoals"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸŽ¯  Set Budget Goals"
                android:background="@drawable/button_green"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnAddExpense"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="âž•  Add Expense"
                android:background="@drawable/button_green"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnViewExpenses"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ“‹  View Expenses"
                android:background="@drawable/button_green"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnAddCategory"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ“‚  Add Category"
                android:background="@drawable/button_green"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginBottom="16dp" />




            <Button
                android:id="@+id/btnSummary"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="ðŸ“Š  View Summary"
                android:background="@drawable/button_green"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
